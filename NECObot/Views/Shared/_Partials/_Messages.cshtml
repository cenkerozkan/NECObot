@model IEnumerable<BLL.Models.MessageModel>

@if (!Model.Any())
{
    <div class="alert alert-info">
        Seems like there is a deep silence in here :D
    </div>
}
else
{
    @foreach (var message in Model)
    {
        <div class="chat-message @(message.Role == "user" ? "user" : "bot")">
            @message.Content
        </div>
    } 
}